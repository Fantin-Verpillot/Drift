{% extends 'base.html.twig' %}

{% block title %}
    User page
{% endblock %}

{% block body %}

    <div class="row">
        <div class="col-md-12 no-padding">
            <div class="panel panel-default user-panel">
                <div class="panel-heading heading">
                    <i class="fa fa-info-circle" aria-hidden="true"></i> Information
                </div>
                <div class="panel-body">
                    <div class="text">
                        <i class="fa fa-user" aria-hidden="true"></i> Lyfing
                    </div>

                    <div class="text">
                        <i class="fa fa-envelope" aria-hidden="true"></i> philippe.eng@epita.fr
                    </div>

                    <div class="text">
                        <i class="fa fa-star" aria-hidden="true"></i> XP (60/100)
                        <div class="progress">
                            <div class="progress-bar" style="width: 60%;"></div>
                        </div>
                    <div>

                    <div class="text">
                        <i class="fa fa-trophy" aria-hidden="true"></i> Level 123
                    </div>

                    <div class="text">
                        <i class="fa fa-star-half-o" aria-hidden="true"></i> 3.5 / 5
                    </div>

                    <div class="text">
                        <i class="fa fa-asterisk" aria-hidden="true"></i> Bottles
