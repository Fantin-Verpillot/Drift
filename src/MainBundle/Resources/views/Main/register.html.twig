{% extends 'base.html.twig' %}

{% block title %}
    Register
{% endblock %}

{% block body %}

    <div style="position: fixed; top: 43%; left: 50%; transform: translate(-50%, -50%);">
        <div class="container">
            <div id="title">
                <div class="row" style="text-align: center;">
                    <div class="col-md-8 col-md-offset-2">
                        <p style="font-size: 70px; margin: 0; font-weight: 500;">
                            Join Drift
                        </p>
                    </div>
                </div>

                <hr style="background-color: #666666; border-color: #666666; color: #666666; width: 5%; margin-top: 0; height: 7px; "/>
            </div>

            <div class="row" style="margin-top: 35px;">

                <div class="col-md-4 col-md-offset-4">
                    <div class="panel panel-primary animated fadeIn" id="button-group">
                        <div class="panel-heading">
                            <h3 class="panel-title">
                                <h3 class="panel-title"><i class="fa fa-user-plus"></i> Register</h3>
                            </h3>
                        </div>
                        <div class="panel-body">
                            <form action="{{ path('register_check') }}" method="post">
                                <fieldset>
                                    <div class="form-group">
                                        <input class="form-control" placeholder="Login" type="text" name="username"
                                               style="padding-left: 3px; padding-right: 3px;"/>
                                    </div>

                                    <div class="form-group">
                                        <input class="form-control" name="password" placeholder="Password"
                                               type="password"
                                               style="padding-left: 3px; padding-right: 3px;">
                                    </div>

                                    <div class="form-group">
                                        <input class="form-control" name="email" placeholder="Email"
                                               type="email"
                                               style="padding-left: 3px; padding-right: 3px;">
                                    </div>

                                    <!-- Need ENTER KEY -->
                                    <input type="submit" class="btn btn-lg btn-primary btn-block" value="Register">

                                    <p class="pull-right">
                                        <small>Back to <a href={{ path('login') }}>
                                                <strong style="cursor:pointer;">Login page</strong></a> </small>
                                    </p>
                                </fieldset>
                            </form>
                        </div>
                    </div>

                </div>
            </div>

        </div>

    </div>
{#<h3>Register</h3>#}
