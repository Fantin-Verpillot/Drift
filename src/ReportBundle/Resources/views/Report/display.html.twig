{% extends 'base.html.twig' %}

{% block title %}
    Report
{% endblock %}

{% block body %}
    {#<div>#}
        {#<p>Report message : {{ report.reportMessage }} </p>#}
        {#<p>Original message : </p>#}
        {#<p> {{ report.message }} </p>#}
        {#<p> Written by : {{ report.username }} </p>#}
    {#</div>#}

    <div style="display: table; width: 100%; height: 100%">
        <div style="display: table-cell; vertical-align: middle">
            <div class="container">
                <div class="row">
                    <div class="col-md-6 col-md-offset-3">

                        <div class="panel panel-default bottle-full">
                            <p class="title">Report sent by {{ report.fkBottle.fkReceiver.username }}</p>
