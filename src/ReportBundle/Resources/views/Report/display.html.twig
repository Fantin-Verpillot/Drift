{% extends 'base.html.twig' %}

{% block title %}
    Report
{% endblock %}

{% block body %}
    <a href="{{ path('report_homepage') }}"
       class="animated fadeIn grow"
       style="position: absolute; left: 10px; top: 10px; font-weight: 500; font-size: 22px; cursor: pointer; color: #666666; text-decoration: none;">
        <i class="fa fa-arrow-left" aria-hidden="true"></i> User reports
    </a>

    <div class="logout-button grow">
        <a href="{{ path('logout') }}">
            Logout <i class="fa fa-sign-out" aria-hidden="true"></i>
        </a>
    </div>

    <div style="display: table; width: 100%; height: 100%">
        <div style="display: table-cell; vertical-align: middle">
            <div class="container">
                <div class="row">
                    <div class="col-md-6 col-md-offset-3 animated fadeInDown">

                        <div class="panel panel-default bottle-full">
                            <p class="title">Report sent by {{ report.fkBottle.fkReceiver.username }}</p>
                            <hr />
                            {% if report.fkBottle.image is not null %}
                                <img src="{{ report.fkBottle.image }}" class="img-responsive" style="width: 400px; margin: 0 auto;">
                                <div style="margin-bottom: 30px;"></div>
                            {% endif %}
                            <p class="message">{{ report.fkBottle.message }}</p>
                            <p class="user-info">Written by {{  report.fkBottle.fkTransmitter.username }}</p>


                            <div class="row" style="margin-top: 10px;">
                                <form method="post" action="{{ path('report_ban') }}">
                                    <input name="idReport" type="hidden" value="{{ report.id }}" />
                                    <input name="id" type="hidden" value="{{ report.fkBottle.fkTransmitter.id }}" />
                                    <div class="col-md-4 col-md-offset-4">
                                        <button type="submit" class="btn btn-danger btn-block grow" style="">Ban {{ report.fkBottle.fkTransmitter.username }}</button>
                                    </div>
                                </form>
                            </div>
                        </div>

                    </div>
                </div>



            </div>
        </div>
    </div>
{% endblock %}