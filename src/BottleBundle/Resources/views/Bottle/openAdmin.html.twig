{% extends 'base.html.twig' %}

{% block title %}
    Open a bottle
{% endblock %}

{% block body %}

    {#<a href="{{ path('bottle_home') }}"#}
       {#class="animated fadeIn grow"#}
       {#style="position: absolute; left: 10px; top: 10px; font-weight: 500; font-size: 22px; cursor: pointer; color: #666666; text-decoration: none;">#}
        {#<i class="fa fa-arrow-left" aria-hidden="true"></i> Bottles#}
    {#</a>#}

    <div style="display: table; width: 100%; height: 100%;">
        <div style="display: table-cell; vertical-align: middle">

            <div class="row">

                <div class="col-md-6 col-md-offset-3">

                    {% if bottle is not null %}
                        {% if (bottle.type == 'info') %}
                            {% set color = 'rgba(13, 189, 255, 0.15);' %}
                            {% set icon = 'info-circle' %}
                        {% elseif (bottle.type == 'warning') %}
                            {% set color = 'rgba(255, 255, 0, 0.15);' %}
                            {% set icon = 'exclamation-circle' %}
                        {% elseif (bottle.type == 'help') %}
                            {% set color = 'rgba(0, 128, 0, 0.15)' %}
                            {% set icon = 'question-circle' %}
                        {% else %}
                            {% set color = 'white' %}
                            {% set icon = 'info-circle' %}
                        {% endif %}
                        <div class="panel panel-default bottle-open animated zoomIn" style="background-color: white">
                            <p class="title">
                                <i class="fa fa-{{ icon }}" aria-hidden="true"></i>
                                The administrator sent you a bottle ..
                            </p>
                            <p class="text">{{ bottle.message }}</p>

                            <div style="margin-top: 20px;">
                                <div class="row">

                                    <form action="{{ path('bottle_evaluate') }}" method="post">
                                        <div class="col-md-6">
                                            <div class="checkbox">
                                                <label>
                                                    <input type="checkbox" name="saveBottle" value="save"> Save bottle
                                                </label>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <button type="submit" name="write"
                                                    class="btn btn-primary pull-right grow">
                                                <i class="fa fa-check" aria-hidden="true"></i> Got it
                                            </button>
                                        </div>
                                    </form>
                                </div>
                            </div>

                        </div>

                    {% else %}
                        <div class="panel panel-default bottle-open animated zoomIn" style="background-color: white">
                            <p class="title">
                                <i class="fa fa-info-circle" aria-hidden="true"></i>
                                No bottle available for you, please come back later !
                            </p>
                        </div>
                    {% endif %}

                </div>


            </div>
        </div>
    </div>

    {#<h3>You open the bottle... it contains a message!</h3>#}
